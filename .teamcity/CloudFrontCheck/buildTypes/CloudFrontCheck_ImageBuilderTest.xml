<?xml version="1.0" encoding="UTF-8"?>
<build-type xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://www.jetbrains.com/teamcity/schemas/2021.1/project-config.xsd">
  <name>ImageBuilder Test</name>
  <description />
  <settings>
    <disabled-settings>
      <setting-ref ref="RUNNER_1" />
      <setting-ref ref="RUNNER_3" />
    </disabled-settings>
    <parameters />
    <build-runners>
      <runner id="RUNNER_1" name="sending amiartifact message" type="simpleRunner">
        <parameters>
          <param name="script.content"><![CDATA[echo "##teamcity[buildStatisticValue key='someKey' value='443']"
echo "##teamcity[remoteArtifact amiId='ami-0857aa6981e97d02c' connectionId='PROJECT_EXT_14' type='AWS_AMI']"]]></param>
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
      <runner id="RUNNER_2" name="Image builder step" type="awsImageBuilder">
        <parameters>
          <param name="awsConnectionId" value="PROJECT_EXT_14" />
          <param name="awsSessionDuration" value="60" />
          <param name="cloud.aws.imageBuilder.packer.version" value="1.8.2" />
          <param name="cloud.aws.imagebuilder.base-ami" value="ami-0339455b66e82a8ca" />
          <param name="cloud.aws.imagebuilder.custom.scripts.files"><![CDATA[scripts/script1.sh
scripts/script2.sh]]></param>
          <param name="cloud.aws.imagebuilder.custom.scripts.inline" value="echo 'test'" />
          <param name="cloud.aws.imagebuilder.instance-type" value="t2.nano" />
          <param name="cloud.aws.imagebuilder.promotion.cloudProfile.enabled" value="true" />
          <param name="cloud.aws.imagebuilder.promotion.cloudProfile.id" value="amazon-1" />
          <param name="cloud.aws.imagebuilder.promotion.cloudProfile.image.id" value="PROJECT_EXT_25" />
          <param name="cloud.aws.imagebuilder.subnet-id" value="subnet-54716f2c" />
          <param name="cloud.aws.imagebuilder.tags"><![CDATA[Name=Image builder test
longTag=long tag to check spaces]]></param>
          <param name="teamcity.step.mode" value="default" />
        </parameters>
      </runner>
      <runner id="RUNNER_3" name="writing name" type="simpleRunner">
        <parameters>
          <param name="command.executable" value="echo" />
          <param name="command.parameters" value="%teamcity.build.awsImageBuilder.amiId%" />
          <param name="script.content" value="echo &quot;1&quot;" />
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="" />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings>
      <vcs-entry-ref root-id="SshGitGitJetbrainsTeamTeamcityTestProjectTestProjectGit" />
    </vcs-settings>
    <requirements />
    <build-triggers>
      <build-trigger id="TRIGGER_1" type="vcsTrigger">
        <parameters>
          <param name="branchFilter" value="+:*" />
          <param name="enableQueueOptimization" value="true" />
          <param name="quietPeriodMode" value="DO_NOT_USE" />
        </parameters>
      </build-trigger>
    </build-triggers>
    <cleanup />
  </settings>
</build-type>

